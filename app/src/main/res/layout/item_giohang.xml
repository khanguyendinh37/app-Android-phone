<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_giohang_images"
            android:src="@drawable/backgroud"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_gioihang_tensp"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Tên sản phẩm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout

                android:weightSum="8"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/item_giohang_tru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_remove_24"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/item_giohang_sl"
                    android:layout_width="20dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/item_giohang_cong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_add_24"/>

                <TextView
                    android:layout_weight="5"
                    android:id="@+id/item_giohang_tonggsp"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="20.0000đ"
                    android:textSize="15sp"
                    android:textColor="#F44336"
                    android:layout_marginLeft="10dp"
                    android:textStyle="italic"

                    />


            </LinearLayout>

            <TextView

                android:id="@+id/item_giohang_giasp"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20.0000đ"
                android:textSize="13sp"
                android:textColor="#B1AFAF"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"

                />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>